{
  "name": "filters-tests",
  "version": "0.1.8",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "watch": "HOST=local.testcases.adguard.com react-scripts start",
    "build": "react-scripts build",
    "build:static": "node -r esbuild-register ./buildStaticData.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .js",
    "stylelint": "stylelint ./src/styles/*.scss"
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn stylelint && yarn lint && CI=true react-scripts test"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-recommended-scss"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "ie >= 9"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "node-sass": "^6.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.8.6",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.1.0",
    "react-modal": "^3.9.1",
    "react-scripts": "^4.0.3"
  },
  "devDependencies": {
    "esbuild": "^0.14.1",
    "esbuild-register": "^3.2.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^3.0.3",
    "stylelint": "^10.1.0",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-scss": "^3.9.3"
  }
}
